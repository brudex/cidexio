@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Identity
@model cedix.io.Models.AccountViewModels.LoginViewModel
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

 <section class="clearfix section" style="padding-top: 10px">
    <div class="container-fluid">
        <div class="centered">
            <h1>@ViewData["Title"]</h1>
            <hr class="separator-accent" style="margin-bottom: 10px">
        </div>
        <div class="col-lg-8 col-lg-offset-2 col-md-12 col-sm-12 col-xs-12 fullheight medium-top-padding medium-bottom-padding medium-right-padding medium-left-padding">
            <div>
                <div class="login-form-box">
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="login-form clearfix" role="form" data-toggle="validator">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="login-input-box">
                                 <span class="icon-user-male"></span> <input asp-for="Email" placeholder="Email..." required/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="login-input-box"> <span class="icon-lock"></span> 
                                <input  asp-for="Password"  placeholder="Password..." required/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <p> <button type="submit" class="btn btn-xlg btn-default ">Login</button> 
                                <a href="/account/forgotpassword" class="form-forgotpass bullet">Forgot
                                    Password?</a> </p>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                           
                                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
 
</section>
